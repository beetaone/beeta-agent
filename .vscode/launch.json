  "version": "0.2.0",
  "configurations": [
    {
      "name": "WeeveAgentLocal",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceRoot}/cmd/agent/agent.go",
      "showLog": true,
      "args": [
        "-v",
        "--notls",
        "-b",
        "tcp://localhost:8080",
        "--heartbeat",
        "150",
        "--config",
        "${workspaceRoot}/nodeconfig.json",
        "--loglevel",
        "debug"

      ]
    },
    {
      "name": "WeeveAgentDevAutoReg",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceRoot}/cmd/agent/agent.go",
      "showLog": true,
      "args": [
        "-v",
        "-b",
        "tls://mapi-dev.weeve.engineering:8883",
        "-r",
        "${workspaceRoot}/ca.crt",
        "-n",
        "NodeWithNewTopic",
        "--heartbeat",
        "120",
        "--loglevel",
        "debug",
        "--config",
        "${workspaceRoot}/nodeconfig.json"
      ]
    },
    {
      "name": "WeeveAgentDev",
      "type": "go",
      "request": "launch",
      "mode": "debug",
